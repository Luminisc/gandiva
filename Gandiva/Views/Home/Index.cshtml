@model Gandiva.Models.UsersViewModel
@{
    ViewBag.Title = "Home";
}

<div class="navbar">
    <div class="top-bar-element top-bar-element-left">
        @Html.ActionLink("Создать новую задачу", "Index", "Tasks")
        <span>|</span>
        @Html.ActionLink("Пользователи", "Index", "Users")
    </div>
    <div class="top-bar-element top-bar-element-right">
        @Html.DropDownList("activeUser", new SelectList(Model.Users, "Id", "FullName", Model.ActiveUser), new { onchange = "window.app.setActiveUser(this.options[this.selectedIndex].value)" })
    </div>
</div>
<div>
    <input id="page" value="0" hidden />
    <div id="list" />
</div> 